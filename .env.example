DATABASE_URL=
SECRET_KEY=
TEST_DATABASE_URL=
# Copy this into your .env file manually
# ============================================================================
# NOTIFICATION SYSTEM CONFIGURATION
# ============================================================================

# General Notification Settings
NOTIFICATIONS_ENABLED=true

# Email Notification Settings  
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_BACKEND=smtp
DEFAULT_EMAIL_FROM=noreply@viral-together.com

# SMTP Configuration (for development/testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid Configuration (for production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Mailgun Configuration (alternative for production)  
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org

# Twitter/X Integration
TWITTER_NOTIFICATIONS_ENABLED=true
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-access-token-secret
TWITTER_BEARER_TOKEN=your-bearer-token

# Ollama Configuration for Tweet Generation
OLLAMA_MODEL=deepseek-r1:1.5b
OLLAMA_BASE_URL=http://localhost:11434

# WebSocket Configuration
WEBSOCKET_ENABLED=true